{% extends 'base.html.twig' %}

{% block body %}
    {#
    lister les utilisateurs dans un tableau HTML
    avec la date de naissance au format franÃ§ais
    #}
    <table>
        <tr>
            <th>Id</th>
            <th>Pseudo</th>
            <th>Email</th>
            <th>Date de naissance</th>
        </tr>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.pseudo }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.birthdate ? user.birthdate|date('d/m/Y') }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}

{% block title %}
    {{ parent() }} - Doctrine list users
{% endblock %}

